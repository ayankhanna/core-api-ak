{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/incremental-sync",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/renew-watches",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/setup-missing-watches",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/full-sync-stale",
      "schedule": "0 2 * * *"
    }
  ]
}


